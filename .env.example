APP_NAME=ParkingVentura
APP_ENV=local
APP_KEY=base64:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=America/Sao_Paulo

# === LOGGING ===
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_SLACK_WEBHOOK_URL=

# === DATABASE ===
DB_CONNECTION=mysql
DB_HOST=parking-db
DB_PORT=3306
DB_DATABASE=parking_db
DB_USERNAME=parking_user
DB_PASSWORD=parking_secret_password_change_me

# === BROADCASTING ===
BROADCAST_DRIVER=log

# === CACHE & QUEUE ===
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=cookie

# === REDIS ===
REDIS_HOST=parking-redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# === SESSION ===
SESSION_LIFETIME=120

# === MAIL ===
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@parking-ventura.local
MAIL_FROM_NAME="Parking Ventura"

# === AWS (Optional) ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# === PUSHER (Optional) ===
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Detran API Configuration
DETRAN_API_URL=https://api.detran.mock/v1
DETRAN_API_TOKEN=demo-token
DETRAN_API_TIMEOUT=5
DETRAN_API_RETRY_TIMES=2
DETRAN_API_RETRY_SLEEP=100

# MercadoPago Configuration
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_WEBHOOK_SECRET=
MERCADOPAGO_TIMEOUT=30
MERCADOPAGO_SANDBOX=true

# Barrier Control Configuration (Sistema de Cancelas)
BARRIER_API_URL=mock://barrier
BARRIER_API_KEY=
BARRIER_API_TIMEOUT=10